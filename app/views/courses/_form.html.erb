<%= form_for @course do |f| %>
    <% if @course.errors.any?%>
        <div id = "error_explanation">
            <h2>
                <%= pluralize(@course.errors.count, "error")%>
                prohibited this course from being saved
            </h2>
            <ul>
                <% @course.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <%end%>   

    <div class="form-group">
        <%= f.label :subject %><br>
        <%= f.text_field :subject, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :price %><br>
        <%= f.text_field :price %>
        <%= f.select :currency, options_for_select([["NTD","NTD"], ["USD","USD"], ["HKD","HKD"], ["SGD","SGD"]])%>
    </div>
    <div class="form-group">
        <%= f.label :course_type %>
        <%= f.text_field :course_type, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.check_box :published %>
        <%= f.label :published %>

    </div>
    <div class="form-group">
        <%= f.label :url_name %>
        <%= f.text_field :url, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :intro %>
        <%= f.text_area :intro, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :exp_time %>
        <%= f.text_field :exp_time, class: 'form-control'  %>
    </div>
    <div>
        <%= f.submit :Submit, class: 'btn btn-primary' %>
        <%= link_to 'Back', courses_path , class: "btn btn-light"%>
    </div>
<% end %>